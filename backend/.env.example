# Database
DATABASE_URL="postgresql://letschat:letschat_secret@localhost:5432/letschat?schema=public"

# Redis (for Socket.io later)
REDIS_URL="redis://localhost:6379"

# JWT Secrets (generate strong random strings for production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-in-production"

# Server
PORT=4000
NODE_ENV=development

# CORS - frontend URL
FRONTEND_URL="http://localhost:3000"

# Email (for forgot password)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@letschat.app"

# Uploads (optional; defaults to backend/uploads)
UPLOAD_DIR="./uploads"
# Public API URL for upload response URLs (optional). Leave unset to return relative /uploads/...
# paths so the frontend proxies them (images work for all clients). Set this to a URL reachable
# by all clients (e.g. http://YOUR_LAN_IP:4000 or your production API URL) if you want full URLs.
# API_URL="http://localhost:4000"
